            },
            {
                id: 3,
                name: "Free Medical Clinic",
                type: "healthcare",
                description: "Primary care services for uninsured residents",
                address: "789 Pine St, Your City",
                phone: "(555) 345-6789",
                hours: "Tue, Thu 10AM-4PM",
                distance: "0.8 miles"
            },
            {
                id: 4,
                name: "Public Transit Connect",
                type: "transport",
